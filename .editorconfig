root = true

[*]
end_of_line              = crlf
indent_style             = tab
charset                  = utf-8
trim_trailing_whitespace = true
insert_final_newline	 = false

[*.sh]
# bash/zsh cannot parse script files with crlf line endings
end_of_line              = lf

[*.{yaml,yml}]
indent_style = space
indent_size = 2